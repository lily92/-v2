/* pages/home/index.wxss */
page{ background: #f7f7f7;}
.home-container {
  padding: 20rpx 30rpx;
}


.my-order{background-color: #ffffff;
	box-shadow: 0rpx 5rpx 10rpx 1rpx 
		rgba(131, 131, 131, 0.05);
	border-radius: 10rpx; padding: 20rpx; margin: 20rpx auto;}

.user-name-level {
  flex: 4;
}

.user-name {
  font-size: 28rpx;
  margin-top: 16rpx;
  font-weight: 800;
}

.user-level {
  width: 100%;
  height: 50rpx;
}

.user-name-level .user-level image {
  width: 30%;
  height: 45%;
}

.user-info-wrapper .icon {
  line-height: 110rpx;
  color: #a0a0a0;
}

.user-category {
  display: flex;
  margin-top: 30rpx;
}

.u-category {
  flex: 1;
  text-align: center;
  padding: 10rpx 0 0;
}

.u-category .integral-icon, .u-category .retail-icon, .u-category .profile-icon {
  font-size: 36rpx;
}

.u-category .icon-title {
  font-size: 22rpx;
  line-height: 16rpx;
}

/* 我的订单 */

.my-order {
  border-bottom: 10rpx solid #f5f5f5;
}

.all-order {
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}

.all-order text {
  display: inline-block;
  width: 48%;
  padding: 20rpx 0;
}

.all-order-left {
  text-align: left;
  color: #444;
}

.all-order-right {
  text-align: right;
  padding-right:10rpx;
  color: #ccc;
}

.order-arrow-icon {
  position: absolute;
  right: 0%;
  top: 33%;
  color: #d1d1d1;
  font-size: 32rpx;
  font-weight: 300;
}

.order-category {
  display: flex;
  padding: 20rpx 0;
}

.o-category {
  flex: 1;
  text-align: center;
}
.more-order-item{ width: 25%}

.o-category .o-category-icon {
  font-size: 50rpx;
  color: #555;
}

.more-order{ padding: 20rpx 0}
.m-icon{ width: 60rpx; height: 60rpx;  margin:0 auto 20rpx;}
.m-icon-1{ background: url('https://gdhflw.com/public/partime/coffeeImg/icon-p.png') no-repeat center; background-size: 60rpx;}
.m-icon-2{ background: url('https://gdhflw.com/public/partime/coffeeImg/icon-pm.png') no-repeat center; background-size: 60rpx;}
.m-icon-3{ background: url('https://gdhflw.com/public/partime/coffeeImg/icon-zc.png') no-repeat center; background-size: 60rpx;}
.pay-title {
  font-size: 24rpx;
  color: #333;
  line-height: 22rpx;
  text-align: center;
  
}

/* 分类栏目 */

.h-category-cell .van-cell {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #000;
  font-weight: 300;
}

.h-category-cell .van-cell .van-cell__left-icon-wrap {
  font-size: 40rpx;
  margin-right: 30rpx;
  color: #333;
}

.home-category{background-color: #ffffff;
	box-shadow: 0rpx 5rpx 10rpx 1rpx 
		rgba(131, 131, 131, 0.05);
	border-radius: 10rpx; padding: 20rpx;}
.home-category button{
  text-align: left;
  background: #fff;
  padding-left: 0;
  padding-right: 0;
  border: none;

}
.home-category button::after{
 border: none;
}