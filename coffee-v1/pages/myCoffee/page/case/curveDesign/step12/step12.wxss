.btn-group {
	width: 340rpx;
	line-height: 90rpx;
	text-align: center;
	color: #fff;
	background-image: linear-gradient(-75deg, 
		#2d2d2d 0%, 
		#111111 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
		border-radius: 40rpx;
}
