/* 图表 */
.positionr{ position: relative;}
.positionb{ position: absolute;}
.line-box{ width: 635rpx; height: 360rpx; margin: 0 auto; border-left: 1rpx solid #fff; }
.y-line-number{ position: absolute;  width: 20rpx; height: 360rpx; display: flex; flex-wrap: wrap; left: -25rpx;  bottom: 0; flex-wrap: wrap-reverse; color: #c8c8c8; font-size: 18rpx;}
.item{ width: 20rpx; height: 36rpx; display: flex; align-items: flex-end; }
.item:first-child{ position: relative; left: -40rpx;}
.custom-button{ width: 14rpx; height: 14rpx; border-radius: 50%; background: #ff9f4d; font-size: 0; position: relative;}
.time-class{ position: absolute;  width: 48rpx; height: 46rpx; background: url('https://gdhflw.com/public/partime/coffeeImg/design-icon.png') no-repeat center; background-size:contain; top: -60rpx; left: 50%; transform: translateX(-50%); font-size: 20rpx; text-align: center; line-height: 40rpx; color: #ff9f4d;}
.slider{ position: absolute; width: 100%; bottom: 0;}
.step-line{ position: absolute; width: 100%; height: 100%; left: 0; top: 0;}
.line1{ height: 100%; width: 1px; background:#fff; left:auto; bottom: 0; }
.line-dot{ width: 14rpx; height: 14rpx; border-radius: 50%; background: #fff; bottom:-7rpx; transform: translateX(-50%); position: absolute;}
.line-time{ color: #fff; margin-left: -30rpx; font-size: 20rpx;top: 50%; transform: translateY(-50%); position: absolute;}
/* end 图表 */

