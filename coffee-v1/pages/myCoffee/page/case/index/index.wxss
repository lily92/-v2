/* pages/myCoffee/page/journal/index/index.wxss */
page {
	background: #f7f7f7;
}

.tab {
	width: 100%;
}

.tab .van-tabs__nav {
	border-radius: 10px !important;
}

.tab .van-tab--disabled {
	color: #333;
}

.edit-height,
.edit {
	height: 120rpx;
}

.edit {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	padding: 15rpx 20rpx;
	box-sizing: border-box;
	z-index: 99;
}

.edit-btn {
	height: 90rpx;
	text-align: center;
	width: 30%;
	line-height: 90rpx;
	background-image: linear-gradient(-75deg,
		#2d2d2d 0%,
		#111111 100%),
		linear-gradient(#ffffff,
		#ffffff);
	background-blend-mode: normal,
		normal;
	border-radius: 41rpx;
}

.colorf {
	color: #fff;
}

.icon {
	background: url('https://gdhflw.com/public/partime/coffeeImg/icon-edit-rizhi.png') no-repeat right center;
	background-size: 37rpx;
	padding: 10rpx 50rpx 10rpx 0;
}

.btn-down {
	width: 80rpx;
	height: 80rpx;
	position: fixed;
	right: 20rpx;
	z-index: 99;
	bottom: 30%;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	background-image: linear-gradient(-75deg,
		#2d2d2d 0%,
		#111111 100%),
		linear-gradient(#ffffff,
		#ffffff);
	background-blend-mode: normal,
		normal;
	box-shadow: 0rpx -5rpx 10rpx 1rpx rgba(131, 131, 131, 0.4);
	border-radius: 40rpx;
}
.btn-group{ padding-top: 40rpx;}
.btn{
	background-image: linear-gradient(-75deg, 
			#2d2d2d 0%, 
			#111111 100%), 
		linear-gradient(
			#f2f2f2, 
			#f2f2f2);
		background-blend-mode: normal, 
			normal;
		border-radius: 32px; width: 185rpx; line-height: 64rpx; color: #fff; text-align: center;
}
.setp-img{ padding: 50rpx; width: 585rpx; box-sizing: border-box; background: url('https://gdhflw.com/public/partime/coffeeImg/cp-bz-bg-1.png') repeat;}
.van-popup{ border-radius: 20rpx !important; overflow: hidden;}
.margin0-auto{ margin: 50rpx auto 0;}
.tip{padding: 50rpx; width: 520rpx; box-sizing: border-box;line-height: 1.7;}