.padding-top0{ padding-top: 0;}
page {
	background: #f7f7f7;
}

.edit-height,
.edit {
	height: 120rpx;
}

.edit {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	padding: 15rpx 20rpx;
	box-sizing: border-box;
	z-index: 99;
}

.edit-btn {
	height: 90rpx;
	text-align: center;
	width: 45%;
	padding-top: 10rpx;
	box-sizing: border-box;
	background-image: linear-gradient(-75deg,
		#2d2d2d 0%,
		#111111 100%),
		linear-gradient(#ffffff,
		#ffffff);
	background-blend-mode: normal,
		normal;
	border-radius: 41rpx;
}
.colorf {
	color: #fff;
}

.btn-group{ padding-top: 40rpx;}
.btn{
	background-image: linear-gradient(-75deg, 
			#2d2d2d 0%, 
			#111111 100%), 
		linear-gradient(
			#f2f2f2, 
			#f2f2f2);
		background-blend-mode: normal, 
			normal;
		border-radius: 32px; width: 185rpx; line-height: 64rpx; color: #fff; text-align: center;
}


