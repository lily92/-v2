/* pages/myCoffee/page/goldenCup/detail/detail.wxss */
page{ background: #000;}
.positionr{ position: relative;}
.box1{ min-height: 330rpx; margin-bottom: 20rpx;}
.padding20{ padding: 20rpx;}
.bggreen{ background: #535c46; border-radius: 20rpx;}
.container {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
   width: 300rpx;
   height:290rpx;
} 
ec-canvas,.canvas-img {
  width: 100%;
  height:290rpx;
}


/* star content */
.title {
	width: 100%;
	height: 100px;
	background-color: #ffffff;
	border-radius: 10px;
}
.detail-box1{ width: 330rpx;}
.colorf{ color: #fff;}
.score{ font-size: 22rpx; color: #aaa;}
.star{ width: 205rpx;}
.rate-item{ padding: 15rpx 0;}
.w50{ width: 48%; padding: 10rpx 1%; border-bottom: 2rpx solid  rgba(255, 255, 255, .5); }
.date{ color: #aaa; font-size: 22rpx;}
.box2{ align-items: flex-start;}
.w49{ width: 49%; display: block;}
.textarea{ width: 100%; height: 100%; box-sizing: border-box;}
.box3{ height: 210rpx; min-height:  auto;}
.input-title {
	width: 100%;
	height: 100rpx;
	background-color: #ffffff;
  border-radius: 10px;
  padding: 10rpx 15rpx; box-sizing: border-box;
   font-size: 28rpx;
   text-align: center;
    margin-bottom: 20rpx;
}
.top{ font-size: 28rpx; margin-bottom: 20rpx;}
.flex-center{ align-items: center;}
.type{ margin: 0 20rpx; position: relative;}
.type::before{ display: block; width:16rpx; height: 16rpx; border-radius: 50%; content: ''; position: absolute;  left: -20rpx; top: 15rpx;}
.type.color1::before{background: #697657;}
.type.color2::before{background: #b5a18f;}
.type.color3::before{background: #ff9b44;}
.share-title{ width: 464rpx;}

/* end star content */

.btn-group,.btn-group-height{ height: 134rpx;}
.btn-group{ padding: 20rpx 50rpx; position: fixed; bottom: 0; width: 100%; left: 0; background: #000; border-top: 1px solid #a0a0a0; box-sizing: border-box; z-index: 99;}
.btn {
	width: 300rpx;
  line-height: 90rpx;
  height: 90rpx;
	background-image: linear-gradient(-75deg, 
		#2d2d2d 0%, 
		#111111 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	box-shadow: 0rpx 5rpx 10rpx 1rpx 
		rgba(131, 131, 131, 0.05);
  border-radius: 41rpx;
   color: #fff;
   text-align: center;
   box-sizing: border-box;
}
.btn-save{ background: url('https://gdhflw.com/public/partime/coffeeImg/icon-save.png') no-repeat 70%  center #222; background-size: 24rpx;}
.btn-share{ background: url('https://gdhflw.com/public/partime/coffeeImg/icon-shage.png') no-repeat 70%  center #222; background-size: 24rpx;}

.fix-save{ background: #000; left: 0; top: 0; bottom: 0; top: 0; position: fixed; width: 100%; z-index: 1;}
.btn-save-img{
	width: 680rpx;
	line-height: 80rpx;
	text-align: center;
	background-image: linear-gradient(-75deg, 
		#2d2d2d 0%, 
		#111111 100%), 
	linear-gradient(
		#000000, 
		#000000);
	background-blend-mode: normal, 
		normal;
	border-radius: 10rpx; position: fixed; bottom: 10rpx; z-index:999; left: 20rpx;
	color: #fff;
	
}